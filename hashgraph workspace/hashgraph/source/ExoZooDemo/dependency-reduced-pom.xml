<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>platform-apps</artifactId>
    <groupId>SwirldsPlatform</groupId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>ExoZooDemo</groupId>
  <artifactId>ExoZooDemo</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>aviator-core</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
              </excludes>
            </filter>
          </filters>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.0.2</version>
        <configuration>
          <archive>
            <manifest>
              <mainClass>ExoZooDemoMain</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>production</id>
      <properties>
        <sdk.dir>${project.basedir}/../..</sdk.dir>
        <platform.repo>${project.baseUri}../../data/repos/platform/</platform.repo>
        <app.repo>${project.baseUri}../../data/repos/app/</app.repo>
      </properties>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>aviator-core</id>
      <name>TxMQ Aviator Core Public Repository</name>
      <url>https://nexus.txmq.com:8080/repository/aviator-core/</url>
    </repository>
    <repository>
      <releases>
        <updatePolicy>always</updatePolicy>
      </releases>
      <snapshots>
        <updatePolicy>always</updatePolicy>
      </snapshots>
      <id>platform.repo</id>
      <name>platform</name>
      <url>${platform.repo}</url>
    </repository>
    <repository>
      <releases>
        <updatePolicy>always</updatePolicy>
      </releases>
      <snapshots>
        <updatePolicy>always</updatePolicy>
      </snapshots>
      <id>app.repo</id>
      <name>app</name>
      <url>${app.repo}</url>
    </repository>
  </repositories>
  <properties>
    <mdep.skip>false</mdep.skip>
    <sdk.dir>${project.basedir}/../..</sdk.dir>
    <platform.repo>${project.baseUri}../../data/repos/platform/</platform.repo>
    <app.repo>${project.baseUri}../../data/repos/app/</app.repo>
    <app.name>ExoZooDemo</app.name>
  </properties>
</project>

